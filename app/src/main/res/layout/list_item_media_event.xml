<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/TileStyle"
    android:elevation="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="8dp"
    android:paddingStart="0dp"
    android:paddingEnd="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/listItem_mediaEvent_title"
            style="@style/CaptionStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="8dp"
            android:ellipsize="end"
            android:singleLine="true"
            tools:text="Nur ein Test" />

        <TextView
            android:id="@+id/listItem_mediaEvent_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            tools:text="30.08.2021 - 31.08.2021" />
    </LinearLayout>

    <TextView
        android:id="@+id/listItem_mediaEvent_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:ellipsize="end"
        android:singleLine="true"
        tools:text="Das ist eine sehr lange Testbeschreibung, um zu sehen wie sich das verhÃ¤lt" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listItem_mediaEvent_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="6dp"
        android:layout_marginTop="3dp"
        android:clipToPadding = "false"/>


</LinearLayout>