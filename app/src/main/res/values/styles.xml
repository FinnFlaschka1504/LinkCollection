<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>

        <item name="materialCalendarStyle">@style/Widget.MaterialComponents.MaterialCalendar</item>
        <item name="materialCalendarFullscreenTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar</item>
    </style>

    <style name="AppTheme.NoTitle">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ImageButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">@drawable/ripple</item>
        <item name="android:padding">5dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TextButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/clickable_text_color</item>
    </style>

    <style name="TextButtonStyle.Normal">
        <item name="android:textColor">@color/clickable_text_color_normal</item>
    </style>

    <style name="TextButtonStyle.Primary">
        <item name="android:textColor">@color/clickable_text_color_primary</item>
    </style>

    <style name="DialogActivityTheme" parent="Theme.AppCompat.DayNight.Dialog.MinWidth">
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/colorAccent</item>
<!--        <item name="android:background">@color/colorBackground</item>-->
        <item name="android:excludeFromRecents">true</item>
    </style>

    <style name="DialogActivityTheme.NoTitle" parent="Theme.AppCompat.DayNight.Dialog.MinWidth">
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:excludeFromRecents">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="CaptionStyle">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="ToolBarStyle" parent="AppTheme">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="TitleTextStyle" parent="AppTheme">
        <item name="android:textColor">@color/colorMenuText</item>
    </style>

    <style name="TextWithShadow">
        <item name="android:paddingLeft">4px</item>
        <item name="android:paddingBottom">4px</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="TileStyle">
        <item name="android:background">@drawable/tile_background</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">@drawable/ripple</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:elevation">3dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
    </style>

    <!--    <style name="Widget.AppCompat.Button.Borderless.Colored" parent="Base.Widget.AppCompat.Button.Borderless.Colored">-->
<!--        <item name="android:textColor">@color/colorAccent</item>-->
<!--    </style>-->
    <style name="Theme.SwitchDateTime.TitleDateTimeLabelText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Theme.SwitchDateTime.TimeLabelText">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">?android:attr/textColorSecondaryInverse</item>
<!--        <item name="android:textStyle">bold</item>-->
    </style>
    <style name="Theme.SwitchDateTime.DateLabelMonthAndDay">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">?android:attr/textColorSecondaryInverse</item>
<!--        <item name="android:textStyle">bold</item>-->
    </style>
    <style name="Theme.SwitchDateTime.DateLabelYear">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">?android:attr/textColorSecondaryInverse</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
