<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <com.maxMustermannGeheim.linkcollection.Utilities.SquareLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/dialog_selectRandomDialog_videos"
                style="@style/ImageButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/ic_videos" />
        </com.maxMustermannGeheim.linkcollection.Utilities.SquareLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <com.maxMustermannGeheim.linkcollection.Utilities.SquareLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/dialog_selectRandomDialog_knowledge"
                style="@style/ImageButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/ic_knowledge" />
        </com.maxMustermannGeheim.linkcollection.Utilities.SquareLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <com.maxMustermannGeheim.linkcollection.Utilities.SquareLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/dialog_selectRandomDialog_jokes"
                style="@style/ImageButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/ic_jokes" />
        </com.maxMustermannGeheim.linkcollection.Utilities.SquareLayout>
    </FrameLayout>

</LinearLayout>