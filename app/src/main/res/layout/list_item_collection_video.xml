<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:minHeight="200dp"
    tools:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="8dp"
    android:paddingVertical="8dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/listItem_collectionVideo_thumbnail"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:maxHeight="150dp"
            android:tintMode="src_atop"
            app:srcCompat="@drawable/ic_download"
            tools:srcCompat="@drawable/simpsons_movie_poster"
            tools:tint="#66000000" />

        <ImageView
            android:id="@+id/listItem_collectionVideo_check"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_check"
            app:tint="#4CAF50"
            tools:visibility="visible" />

    </FrameLayout>

    <TextView
        android:id="@+id/listItem_collectionVideo_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:lines="2"
        android:text="BloÃŸ ein Test \n noch mehr asdad asd "
        android:textAlignment="center" />
</LinearLayout>